<header>
  <nav>
    <p><%= link_to "Home", root_path %></p>
    <p><%= link_to "Books", books_path %></p>
    <% if @error != nil %>
      <div class='error'>
        <%= @error %>
      </div>
    <% end %>
  </nav>
  <section class="toggle">
    <form class=".sort-for," action="/reviews/<%= @username %>" method="get">
      <input type="submit" id="sort-button" name="sort" value="Newest Reviews">
    </form>
    <form class=".sort-for," action="/reviews/<%= @username %>" method="get">
      <input type="submit" id="sort-button" name="sort" value="Oldest Reviews">
    </form>
  </section>
</header>
<% @reviews.each do |review| %>
  <ul>
    <li><%= link_to 'Delete Review', review_path(review.id), method: :delete %></li>
    <li>Review Title: <%= review.title %></li>
    <li>Review: <%= review.review_text %></li>
    <li>Rating: <%= review.rating %></li>
    <li>Date written: <%= review.created_at %></li>
    <li><%= link_to review.book.title, book_path(review.book_id) %></li>
    <img src=<%= review.book.cover_image %> class="book-cover" alt="cover of <%= review.book.title %>">
  </ul>
<% end %>
